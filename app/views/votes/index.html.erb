<h1>Listing votes</h1>

<table>
  <thead>
    <tr>
      <th>Player name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.player_name %> by <%= vote.user %> </td>
        <td><%= link_to 'Show', vote %></td>
        
          <td><%= link_to 'Edit', edit_vote_path(vote) %></td>
       
        <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Vote', new_vote_path %>
<% end %>
